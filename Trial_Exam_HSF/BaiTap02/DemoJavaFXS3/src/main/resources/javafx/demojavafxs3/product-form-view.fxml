<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="javafx.demojavafxs3.controller.ProductFormController"
      stylesheets="@/static/style.css"
      styleClass="glass-container">
    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
    </padding>
    <children>
        <Label fx:id="lblTitle" text="Tạo Sản phẩm Mới" styleClass="label-section-header" />

        <GridPane hgap="10.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Tên Sản phẩm:" GridPane.rowIndex="0" />
                <TextField fx:id="txtName" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label fx:id="lblNameError" text="" styleClass="label-error" visible="false"
                       managed="false" GridPane.columnIndex="1" GridPane.rowIndex="0"
                       GridPane.valignment="BOTTOM"/>

                <Label text="Giá:" GridPane.rowIndex="1" />
                <TextField fx:id="txtPrice" promptText="Chỉ nhập số" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label fx:id="lblPriceError" text="" styleClass="label-error" visible="false"
                       managed="false" GridPane.columnIndex="1" GridPane.rowIndex="1"
                       GridPane.valignment="BOTTOM"/>

                <Label text="Tồn kho:" GridPane.rowIndex="2" />
                <TextField fx:id="txtStock" promptText="Chỉ nhập số" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label fx:id="lblStockError" text="" styleClass="label-error" visible="false"
                       managed="false" GridPane.columnIndex="1" GridPane.rowIndex="2"
                       GridPane.valignment="BOTTOM"/>

                <Label text="Danh mục:" GridPane.rowIndex="3" />
                <ComboBox fx:id="comboCategory" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label fx:id="lblCategoryError" text="" styleClass="label-error" visible="false"
                       managed="false" GridPane.columnIndex="1" GridPane.rowIndex="3"
                       GridPane.valignment="BOTTOM"/>
            </children>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button fx:id="btnSave" mnemonicParsing="false" onAction="#handleSave" prefWidth="100.0"
                        styleClass="btn-success" text="Lưu" />
                <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#handleCancel" prefWidth="100.0"
                        styleClass="btn-secondary" text="Hủy bỏ" />
            </children>
        </HBox>
    </children>
</VBox>